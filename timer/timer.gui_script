
local function init_final_msg()
	msg.post("score", "death")
	msg.post("cam", "death")
end

local function init_timer (self)
	gui.set_enabled(gui.get_node("time"), true)
	self.current_time = 60
	self.alive = true
	gui.set_text(gui.get_node("time"),  tostring(self.current_time))
	local fn = function ()
		if self.current_time >= 1 then
			self.current_time = self.current_time - 1
			gui.set_text(gui.get_node("time"),  tostring(self.current_time))
		end
		if self.current_time <= 0 and self.alive then
			self.alive = false
			init_final_msg()
		end
	end
	if self.timer then 
		timer.cancel(self.timer)
	end
	self.timer = timer.delay(1, true, fn)
end

function init(self)
	init_timer(self)
end

