function on_message(self, message_id, message, sender)
	if message_id == hash("whip") and self.alive then
		if self.current_time > 3 then
			self.current_time = self.current_time - 3
			gui.set_text(gui.get_node("time"),  tostring(self.current_time))
		end
		if self.current_time <= 0 and self.alive then
			self.alive = false
			init_final_msg()
		end
	end
	if message_id == hash("carrot") and self.alive then
		self.current_time = self.current_time + 10
		gui.set_text(gui.get_node("time"),  tostring(self.current_time))
	end
	if message_id == hash("hide") then
		gui.set_enabled(gui.get_node("time"), false)
	end
	if message_id == hash("reset_game") then
		init_timer(self)
	end
end

